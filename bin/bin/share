#!/usr/bin/env zsh

req_url='https://x0.at/'

echo "arg: $1"
if [ -z "$1" ]; then
    curl -F "file=@/dev/stdin;filename=stdin.txt" $req_url | read -r url
elif [ -f "$1" ]; then
    curl -F "file=@\"$1\"" $req_url | read -r url
else
    echo "File $1 does not exist"
    exit 1
fi
echo -n "$url" | xsel -ib
notify-send -a "share" "File uploaded" "$url"
