	email = fichtefoll2@googlemail.com
	signingkey = 07CD83C5

[commit]
	gpgSign = true

[alias]
	b = branch
	c = commit
	cm = commit --message
	ca = commit --all
	co = checkout
	d = diff
	ds = diff --staged
	fap = fetch --all --prune
	r = reset
	rb = rebase
	rba = rebase --abort
	s = status -s

	lg = log --graph --oneline --decorate
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	ld  = !f() { git show "$1"; git diff "$1"^.."$1";  }; f
	can = commit --amend --no-edit
	cAm = commit --all --message
	cAa = commit --all --amend -C HEAD
	cAan = commit --all --amend --no-edit
	new = !sh -c 'git log $1@{1}..$1@{0} "$@"'

	; Manage "gone" local branches (branches whose tracking branch doesn't exist anymore)
	ls-gone = !git for-each-ref --format '%(refname:strip=2) %(upstream:track)' refs/heads | awk '$2 == \"[gone]\" {print $1}'
	rm-gone = !git branch -D $(git ls-gone)

	; Pull request management
	; https://gist.github.com/gnarf/5406589
	prr = "!f() { git fetch -fu $1 refs/pull/$2/head:pr/$2; }; f"
	pr = prr origin
	pru = prr upstream
	pr-clean = !git branch -D $(git for-each-ref --format='%(refname:strip=2)' refs/heads/pr)

	; Sublime Merge integrations
	terminal = !i3-msg exec \"alacritty --working-directory \\\"$(pwd)\\\"\"
	rebase-terminal = "!f() { i3-msg exec \"alacritty --working-directory \\\"$(pwd)\\\" --hold -e $SHELL -c \\\"git rebase -i $1\\\"\"; }; f"

[branch]
	autosetuprebase = always

[push]
	default = simple
	autoSetupRemote = true

[gc]
	autoDetach = false

[pull]
	rebase = true

[merge]
	conflictStyle = diff3
	tool = smerge

[core]
	excludesfile = /home/fichte/.gitignore_global

[rebase]
	autoSquash = true

[log]
	follow = true

[mergetool "smerge"]
	cmd = smerge --wait mergetool \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
	trustExitCode = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[core]
	pager = delta

[delta]
	line-numbers = true
	minus-style = syntax auto
	# side-by-side = true

[interactive]
	diffFilter = delta --color-only
[tag]
	gpgSign = true
[rerere]
	enabled = true
[init]
	defaultBranch = main
[diff]
	algorithm = histogram
