[module/updates]
type = custom/script

exec = num=$(checkupdates | wc -l); ((num > 0)) && echo $num || echo ""
label = %output%
# format-prefix = "ï€¡ "
format-prefix = "ï‘¦ "
format-prefix-foreground = ${colors.prefix}
format-underline = ${colors.warning}
tail = true
interval = 300

click-left = checkupdates | cut -d" " -f1 | ~/.config/polybar/scripts/polyyad.py --nobuttons --text-info --no-buttons --close-on-unfocus --height 270 --width 230 &

[module/gpu_usage]
type = custom/script

# TODO not working, but does in terminal?
exec = sudo -n radeontop --dump - | rg 'gpu ([\d.]+)' -r '$1' -o
label = %output%%
format-prefix = "ï€¾ "
format-prefix-foreground = ${colors.prefix}
format-underline = ${colors.gpu}
tail = true

[module/cpu_load]
type = custom/script

exec = < /proc/loadavg cut -f1 -d" "
label = %output%
format-underline = ${colors.cpu}
interval = 5


[module/compton]
type = custom/script

exec = pgrep -x compton >/dev/null && echo "" || echo "compton not running"
label = %output%
label-foreground = ${colors.foreground-alt}
interval = 5

[settings]
screenchange-reload = true

[global/wm]
margin-top = 6
margin-bottom = 5

