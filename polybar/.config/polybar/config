warn-temperature = 60

format = <ramp> <label>
format-underline = ${colors.cpu}
format-warn = <ramp> <label-warn>

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.alert}

ramp-0 = ï«
ramp-1 = ï«
ramp-2 = ï©
ramp-foreground = ${colors.prefix}



