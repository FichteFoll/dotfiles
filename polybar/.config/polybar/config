[settings]
screenchange-reload = true


[global/wm]
margin-top = 6
margin-bottom = 5


[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
prefix = ${colors.foreground-alt}

primary = #ffb52a
secondary = #0a6cf5
tertiary = #e60053
warning = #ffb52a
alert = #bd2c40

cpu = #950095
memory = #4bffdc
gpu = #8B4500
network = #10831E


[bar/base]
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 0
border-color = #00000000

padding = 2

module-margin = 1
module-padding = 3

# font-0 = xos4 Terminus:pixelsize=12;1
# font-1 = Wuncon Siji:pixelsize=12;1
# font-2 = unifont:size=10:antialias=false;1
# font-4 = fixed:pixelsize=12;1
# https://fontawesome.com/cheatsheet
# https://material.io/tools/icons/
font-0 = Operator Mono Medium:size=11;2
# font-1 = Font Awesome 5 Pro:style=Solid:size=10;2
font-1 = Font Awesome 5 Free:style=Solid:size=10;2
font-2 = Font Awesome 5 Free:size=10;2
font-3 = Material Icons:size=10;2
font-4 = WeatherIcons-Regular:size=10.5;2
font-5 = Symbola:size=10;2
# Need some CJK characters
font-6 = M+ 2m:size=10;2

# override-redirect = true
# wm-restack = i3


[bar/primary]
inherit = bar/base
monitor = ${env:MONITOR:HDMI-A-0}
# monitor = HDMI-A-0

modules-left = i3 xwindow kernel
modules-center = date wttr
modules-right = picom failed_units updates filesystem memory cpu_usage cpu_load cpu_temperature eth pulseaudio

tray-position = right
# tray-background = #0063ff

cursor-click = pointer
cursor-scroll = ns-resize


[bar/secondary]
inherit = bar/base
monitor = ${env:MONITOR:DVI-I-1}

modules-left = i3 xwindow
modules-center = date
modules-right = mpd pulseaudio


[module/xwindow]
type = internal/xwindow
label = %title:0:90:…%
format-underline = ${colors.secondary}


[module/filesystem]
type = internal/fs
interval = 20

mount-0 = /
mount-1 = /data
mount-2 = /mnt/sekai

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %free:1%
label-unmounted = %mountpoint%
label-unmounted-foreground = ${colors.foreground-alt}


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
enable-scroll = false
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 1.5
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.primary}
label-focused-padding = 1.5

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = ${self.label-focused-padding}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = ${self.label-focused-padding}

; Separator in between workspaces
; label-separator = |


