label = BL


[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight


[module/cpu_usage]
type = internal/cpu
interval = 2

format-prefix = " "
format-prefix-foreground = ${colors.prefix}
format-underline = #950095
label = %percentage:2%%


[module/memory]
type = internal/memory
interval = 2

format-prefix = " "
format-prefix-foreground = ${colors.prefix}
format-underline = ${colors.memory}
label = %percentage_used%%


[module/wlan]
type = internal/network
interface = wlp4s0
interval = 5.0

; format-connected = <ramp-signal> <label-connected>
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.prefix}
format-connected = <label-connected>
label-connected = %{F#555}%{F-} %downspeed:8% %{F#555}%{F-} %upspeed:8%
format-connected-underline = ${colors.network}

format-disconnected-prefix = " "
format-disconnected-prefix-foreground = ${colors.prefix}
format-disconnected = <label-disconnected>
format-disconnected-underline = ${colors.warning}
label-disconnected = N/A
; %ifname%
label-disconnected-foreground = ${colors.foreground-alt}

# ramp provided by nm-applet
; ramp-signal-0 = 
; ramp-signal-4 = 
; ramp-signal-foreground = ${colors.foreground-alt}


[module/eth]
type = internal/network
interface = enp0s31f6
interval = 5.0

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.prefix}
# label-connected = %local_ip%
# TODO show IP info on click?
label-connected = %{F#555}%{F-} %downspeed:8% %{F#555}%{F-} %upspeed:8%
format-connected-underline = ${colors.network}

format-disconnected-prefix = " "
format-disconnected-prefix-foreground = ${colors.prefix}
format-disconnected = <label-disconnected>
format-disconnected-underline = ${colors.warning}
label-disconnected = N/A
label-disconnected-foreground = ${colors.foreground-alt}


[module/date]
type = custom/script
exec = date +"%Y-%m-%d %H:%M:%S"
interval = 1
click-left = ~/.config/polybar/scripts/polyyad.py --calendar --undecorated --fixed --close-on-unfocus --no-buttons --width=250 &

label = %output%
format-prefix = " "
format-prefix-foreground = ${colors.prefix}
# format-underline = ${colors.secondary}



[module/pulseaudio]
type = internal/pulseaudio
sink = headphones

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
label-volume-foreground = ${root.foreground}

label-muted =  (%percentage%%)
# label-muted = 🔇 (%percentage%%)
label-muted-foreground = ${colors.foreground-alt}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-foreground = ${colors.foreground-alt}
# ramp-volume-0 = 🔈
# ramp-volume-1 = 🔉
# ramp-volume-2 = 🔊


